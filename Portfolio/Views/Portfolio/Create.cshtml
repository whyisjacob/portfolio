					<label asp-for="ProjectTech" class="control-label"></label>
					<textarea asp-for="ProjectTech" class="form-control" /></textarea>
					<span asp-validation-for="ProjectTech" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ProjectRole" class="control-label"></label>
					<textarea asp-for="ProjectRole" class="form-control" /></textarea>
					<span asp-validation-for="ProjectRole" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ProjectDate" class="control-label"></label>
					<input asp-for="ProjectDate" class="form-control" />
					<span asp-validation-for="ProjectDate" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ProjectAccolade" class="control-label"></label>
